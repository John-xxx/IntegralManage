<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="20.0dip">

    <com.yz.dl.integralmanage.view.dialog.WaitingView
        android:id="@+id/dialog_zstwaitdialog_progressbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.0dp" />

    <TextView
        android:id="@+id/ldialog_integralwaitdialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/dialog_zstwaitdialog_progressbar"
        android:textSize="15sp" />

</RelativeLayout>