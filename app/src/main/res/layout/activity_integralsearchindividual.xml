<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_position"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_bg"
        android:padding="@dimen/most_use_paddingNine"
        android:paddingBottom="@dimen/most_use_paddingEighteen"
        android:paddingTop="@dimen/most_use_paddingEighteen">

        <ImageView
            android:id="@+id/integralsearch_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/str_integral_search"
            android:textColor="@color/white"
            android:textSize="@dimen/logo_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/integral_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/show_view"
            android:orientation="vertical"
            android:paddingTop="@dimen/most_use_paddingFifteen">

            <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/most_use_paddingThirty">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/integral_tab_present"
                        style="@style/tab_button"
                        android:button="@null"
                        android:checked="true"
                        android:text="@string/str_present_integral"
                        android:textColor="@color/selector_tab_textcolor"
                        android:drawableBottom="@drawable/selector_tab_rankstate"
                        android:textSize="@dimen/main_position_size"/>

                    <RadioButton
                        android:id="@+id/integral_tab_history"
                        style="@style/tab_button"
                        android:button="@null"
                        android:text="@string/str_history_integral"
                        android:textColor="@color/selector_tab_textcolor"
                        android:drawableBottom="@drawable/selector_tab_rankstate"
                        android:textSize="@dimen/main_position_size"/>
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>

        <com.yz.dl.integralmanage.view.BanSlideViewPager
            android:id="@+id/integralsearch_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/integral_linear"/>
    </RelativeLayout>
</LinearLayout>
