<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_historyintegral_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_historyintegral_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/most_use_paddingFifteen"
            android:text="2017年7月1日"
            android:textColor="@color/color_title_bg"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/most_use_paddingNine"
            android:background="@mipmap/lineup"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/most_use_paddingNine"
        android:layout_toRightOf="@id/item_historyintegral_layout1"
        android:layout_marginRight="@dimen/most_use_paddingNine"
        android:layout_marginBottom="@dimen/most_use_paddingNine"
        android:layout_marginTop="@dimen/most_use_paddingNine"
        android:gravity="center_vertical"
        android:background="@mipmap/inputbg"
        android:padding="@dimen/most_use_paddingNine">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/most_use_paddingNine"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_historyintegral_typeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纯枪销量"/>
            <TextView
                android:id="@+id/item_historyintegral_typeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingNine"
                android:text="9000吨"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_historyintegral_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/most_use_paddingNine"
            android:text="+15"
            android:textSize="@dimen/text_size_thirty"
            android:textColor="@color/color_integral_person"/>

    </RelativeLayout>

</RelativeLayout>