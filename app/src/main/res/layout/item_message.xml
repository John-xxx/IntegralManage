<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/message_head"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/item_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-9-10-9:20"
                android:textSize="16sp"
                android:textColor="@color/color_message_date"
                />
            <TextView
                android:id="@+id/item_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="党的十八精神传递"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_message_con"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_message_date"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>