<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_bg"
        android:padding="@dimen/most_use_paddingNine"
        android:paddingBottom="@dimen/most_use_paddingEighteen"
        android:paddingTop="@dimen/most_use_paddingEighteen">

        <ImageView
            android:id="@+id/message_send_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_" />

        <TextView
            android:id="@+id/message_send_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/message_con_title"
            android:textColor="@color/white"
            android:textSize="@dimen/logo_text_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/most_use_paddingFifteen"
        android:layout_marginLeft="@dimen/most_use_paddingFifteen"
        android:layout_marginRight="@dimen/most_use_paddingFifteen"
        android:layout_marginTop="@dimen/most_use_paddingFive"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/most_use_paddingNine"
            android:paddingTop="@dimen/most_use_paddingNine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:text="发送对象"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/message_send_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="趙老師"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />
            <EditText
                android:id="@+id/message_send_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:gravity="left|top"
                android:hint="输入标题"
                android:inputType="textMultiLine"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:textColor="@color/color_hint_text"
                android:textColorHint="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="内容"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <EditText
                android:id="@+id/message_send_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:gravity="left|top"
                android:hint="输入内容"
                android:inputType="textMultiLine"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:textColor="@color/color_hint_text"
                android:textColorHint="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/most_use_paddingFifteen"
                    android:text="@string/str_accessory"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_position_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/most_use_paddingFive"
                    android:layout_marginTop="@dimen/most_use_paddingFifteen"
                    android:text="@string/str_notice"
                    android:textColor="@color/red"
                    android:textSize="@dimen/main_position_size" />

            </LinearLayout>

            <com.yz.dl.integralmanage.view.AddAccessoryView
                android:id="@+id/messagesend_accessory_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/messagesend_add_accessory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:src="@mipmap/add_accessory" />
            </com.yz.dl.integralmanage.view.AddAccessoryView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingEighteen"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/message_send_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/most_use_paddingNine"
                    android:paddingLeft="@dimen/most_use_paddingFourty"
                    android:paddingRight="@dimen/most_use_paddingFourty"
                    android:paddingTop="@dimen/most_use_paddingNine"
                    android:text="发送"
                    android:textColor="@color/color_hint_text"
                    android:textSize="@dimen/logo_text_size" />

                <Button
                    android:id="@+id/message_send_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/most_use_paddingThirty"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/most_use_paddingNine"
                    android:paddingLeft="@dimen/most_use_paddingFourty"
                    android:paddingRight="@dimen/most_use_paddingFourty"
                    android:paddingTop="@dimen/most_use_paddingNine"
                    android:text="暂存"
                    android:textColor="@color/color_hint_text"
                    android:textSize="@dimen/logo_text_size" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>