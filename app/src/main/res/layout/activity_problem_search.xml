<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_bg"
        android:padding="@dimen/most_use_paddingNine"
        android:paddingBottom="@dimen/most_use_paddingEighteen"
        android:paddingTop="@dimen/most_use_paddingEighteen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="搜索"
            android:textColor="@color/color_position"
            android:textSize="@dimen/logo_text_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/back_" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="@dimen/most_use_paddingFifteen"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:text="@string/str_text_area"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/inspector_office_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="成都"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_2office"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="成都"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_text_gas"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="城南加油站"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_text_target"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="李花"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textColor="@color/color_position"
                android:background="@drawable/blue_bg"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:gravity="center"
                android:paddingTop="@dimen/most_use_paddingTen"
                android:paddingBottom="@dimen/most_use_paddingTen"
                android:textSize="@dimen/logo_text_size"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>