<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_title_bg"
        android:padding="@dimen/most_use_paddingNine"
        android:paddingBottom="@dimen/most_use_paddingEighteen"
        android:paddingTop="@dimen/most_use_paddingEighteen">

        <ImageView
            android:id="@+id/managerchecked_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/managerchecked"
            android:textColor="@color/white"
            android:textSize="@dimen/logo_text_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/most_use_paddingFifteen"
        android:layout_marginLeft="@dimen/most_use_paddingFifteen"
        android:layout_marginRight="@dimen/most_use_paddingFifteen"
        android:layout_marginTop="@dimen/most_use_paddingEighteen"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/most_use_paddingNine"
            android:paddingTop="@dimen/most_use_paddingNine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:text="@string/str_text_area"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/manager_area_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="成都"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_text_gas"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/manager_gas_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="城南加油站"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_name"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/manager_person_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="李花"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_checked_time"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/manager_datetime_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/ico_time"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="2017-07-15 16:00"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_addpoint_item"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/manager_addpoint_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="+3|主动用普通话交流"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_subpoint_item"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <TextView
                android:id="@+id/manager_markdown_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:drawableRight="@mipmap/pushslide"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:text="-3|无故旷工"
                android:textColor="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_describe"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <EditText
                android:id="@+id/manager_describe_select"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:background="@drawable/button_bg"
                android:gravity="left|top"
                android:hint="问题描述"
                android:inputType="textMultiLine"
                android:padding="@dimen/most_use_paddingFifteen"
                android:singleLine="true"
                android:textColor="@color/color_hint_text"
                android:textColorHint="@color/color_hint_text"
                android:textSize="@dimen/logo_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFifteen"
                android:text="@string/str_accessory"
                android:textColor="@color/black"
                android:textSize="@dimen/main_position_size" />

            <LinearLayout
                android:id="@+id/accessory_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingFive"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/manager_add_accessory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:src="@mipmap/add_accessory" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/most_use_paddingEighteen"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/manager_checked_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/most_use_paddingNine"
                    android:paddingLeft="@dimen/most_use_paddingFourty"
                    android:paddingRight="@dimen/most_use_paddingFourty"
                    android:paddingTop="@dimen/most_use_paddingNine"
                    android:text="确定"
                    android:textColor="@color/color_hint_text"
                    android:textSize="@dimen/logo_text_size" />

                <Button
                    android:id="@+id/manager_checked_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/most_use_paddingThirty"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/most_use_paddingNine"
                    android:paddingLeft="@dimen/most_use_paddingFourty"
                    android:paddingRight="@dimen/most_use_paddingFourty"
                    android:paddingTop="@dimen/most_use_paddingNine"
                    android:text="取消"
                    android:textColor="@color/color_hint_text"
                    android:textSize="@dimen/logo_text_size" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
